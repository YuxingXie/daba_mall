<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
    <!-- 指明满足“/*”的页面，将被“/WEB-INF/views/decorators/decorator.html”所装饰 -->
    <mapping path="/WEB-INF/pages/*" decorator="/WEB-INF/sitemesh/decorator.jsp" />
    <mapping path="/index/main" decorator="/WEB-INF/sitemesh/decorator.jsp" />
    <mapping path="/index/user/register" decorator="/WEB-INF/sitemesh/decorator.jsp" />

    <mapping path="/index.jsp" decorator="/WEB-INF/sitemesh/decorator.jsp" />
    <!-- 不被装饰 -->
    <mapping path="/admin/*" exclue="true" />
</sitemesh>